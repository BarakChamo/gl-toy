{
  "name": "gl-toy",
  "version": "2.0.3",
  "description": "Create quick WebGL demo's using glslify",
  "main": "index.js",
  "scripts": {
    "start": "budo examples/frame/index.js -t babelify | garnish"
  },
  "browserify": {
    "transform": [
      "babelify",
      {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "glslify"
        ]
      }
    ]
  },
  "repository": "barakchamo/gl-toy",
  "keywords": [
    "webgl",
    "shader",
    "shaders"
  ],
  "license": "MIT",
  "dependencies": {
    "a-big-triangle": "^1.0.0",
    "babel-plugin-glslify": "^2.0.0",
    "canvas-fit": "^1.2.0",
    "gl-context": "^0.1.1",
    "gl-shader": "^4.0.1",
    "gl-texture2d": "^2.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babelify": "^6.0.2",
    "budo": "^4.0.0",
    "garnish": "^2.1.3",
    "glslify": "^2.3.1",
    "glslify-hex": "^2.0.1"
  },
  "files": [
    "lib",
    "LICENSE",
    "index.js",
    "HISTORY.md"
  ]
}

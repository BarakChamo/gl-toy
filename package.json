{
  "name": "shader-frame",
  "version": "1.0.0",
  "description": "Create quick WebGL demo's using glslify",
  "main": "dist/build.full.js",
  "scripts": {
    "start": "budo ./index.js | garnish",
    "build": "browserify lib/frame.js -o dist/build.js --no-bundle-external --standalone ShaderFrame",
    "build-full": "browserify lib/frame.js -o dist/build.full.js --standalone ShaderFrame",
    "build-component": "browserify lib/component.js -o dist/component.js --no-bundle-external --standalone ShaderFrameComponent",
    "storybook": "start-storybook -s ./assets -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
          ],
          "plugins": [
            "@babel/plugin-proposal-class-properties"
          ]
        }
      ],
      "glslify",
      "uglifyify"
    ]
  },
  "repository": "barakchamo/gl-toy",
  "keywords": [
    "webgl",
    "shader",
    "shaders"
  ],
  "license": "MIT",
  "dependencies": {
    "a-big-triangle": "^1.0.0",
    "canvas-fit": "^1.2.0",
    "gl-context": "^0.1.1",
    "gl-shader": "^4.0.1",
    "gl-texture2d": "^2.1.0",
    "glsl-noise": "0.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-links": "^5.0.3",
    "@storybook/addons": "^5.0.3",
    "@storybook/react": "^5.0.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-glslify": "^2.0.0",
    "babelify": "^10.0.0",
    "browserify-shim": "^3.8.14",
    "budo": "^4.2.2",
    "bulma": "^0.7.4",
    "garnish": "^2.3.0",
    "glslify": "^2.3.1",
    "glslify-hex": "^2.0.1",
    "uglifyify": "^5.0.1"
  },
  "files": [
    "lib",
    "LICENSE",
    "index.js",
    "HISTORY.md"
  ]
}

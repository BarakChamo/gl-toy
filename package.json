{
  "name": "shader-frame",
  "version": "1.1.0",
  "description": "Create quick WebGL demo's using glslify",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack-dev-server --config=configs/webpack.config.js --open",
    "build": "webpack --config=configs/webpack.config.js",
    "watch": "webpack --watch --config=configs/webpack.config.js",
    "storybook": "start-storybook -s ./dist/assets -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
          ],
          "plugins": [
            "@babel/plugin-proposal-class-properties"
          ]
        }
      ],
      "glslify",
      "uglifyify"
    ]
  },
  "repository": "barakchamo/gl-toy",
  "keywords": [
    "webgl",
    "shader",
    "shaders"
  ],
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "a-big-triangle": "^1.0.0",
    "canvas-fit": "^1.2.0",
    "gl-context": "^0.1.1",
    "gl-shader": "^4.0.1",
    "gl-texture2d": "^2.1.0",
    "glsl-noise": "0.0.0",
    "glslify": "^7.0.0",
    "glslify-loader": "^2.0.0",
    "raw-loader": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-links": "^5.0.3",
    "@storybook/addons": "^5.0.3",
    "@storybook/react": "^5.0.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-glslify": "^2.0.0",
    "bulma": "^0.7.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
